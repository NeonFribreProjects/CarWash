# Development image with full development dependencies
FROM node:20-alpine

# Install ALL required dependencies for Prisma + Alpine
RUN apk add --no-cache \
    git \
    curl \
    openssl \
    openssl-dev \
    openssl-libs-static \
    netcat-openbsd \
    libc6-compat \
    build-base \
    python3 \
    make \
    g++

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/
COPY . .

# Install dependencies efficiently
RUN npm install --no-audit --prefer-offline \
    && cd server && npm install --no-audit --prefer-offline \
    && cd ../client && npm install --no-audit --prefer-offline

# Back to app root
WORKDIR /app

# Set permissions for entrypoint
COPY dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

EXPOSE 3000 5173