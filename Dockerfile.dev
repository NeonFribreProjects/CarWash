# Development image with full development dependencies
FROM node:20-alpine

# Install dependencies in a single layer
RUN apk add --no-cache \
    git \
    curl \
    openssl \
    openssl-dev \
    netcat-openbsd \
    libc6-compat

WORKDIR /app

# Copy ONLY package files first
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Install root dependencies WITHOUT workspaces
RUN npm install --no-workspaces --no-audit --prefer-offline

# Install server dependencies in complete isolation
RUN cd server && npm install --no-audit --prefer-offline --force

# Install client dependencies
RUN cd client && npm install --no-audit --prefer-offline

# NOW copy the rest of the application (excluding node_modules)
COPY --exclude=node_modules --exclude=server/node_modules --exclude=client/node_modules . .

WORKDIR /app

# Set permissions for entrypoint
COPY dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

EXPOSE 3000 5173